<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meme_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="88dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/meme_list_image"
        android:layout_width="@dimen/list_icon_width"
        android:layout_height="@dimen/list_item_minHight"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/meme_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/list_item_minHight"
        android:paddingLeft="@dimen/list_item_padding"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="PlaceHolder" />

</LinearLayout>